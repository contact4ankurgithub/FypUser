<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
       android:background="@color/app_color"
        android:elevation="1dp"
        android:id="@+id/lnlayout1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:id="@+id/rlt_shoplist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shoplist"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_shoplist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoplist"
                android:layout_centerHorizontal="true"
                android:text="Shop List"
                style="@style/TextViewSemiBoldBlack"
                android:textColor="@color/white"
                android:textSize="11dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlt_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_order"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_order" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_order"
                android:layout_centerHorizontal="true"
                android:text="Order"
                style="@style/TextViewSemiBoldBlack"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlt_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:layout_centerHorizontal="true"
                android:text="Profile"
                style="@style/TextViewSemiBoldBlack"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>






    </LinearLayout>

</RelativeLayout>